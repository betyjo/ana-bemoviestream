generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql" / "sqlite"
  url      = env("DATABASE_URL")
}

model Genre {
  id     Int     @id @default(autoincrement())
  name   String
  movies MovieGenre[]
}

model Movie {
  id           Int       @id @default(autoincrement())
  title        String
  overview     String?
  release_date DateTime?
  poster_path  String?
  backdrop_path String?
  popularity   Float?
  vote_average Float?
  vote_count   Int?
  video        Boolean?
  
  genres       MovieGenre[]

  @@map("movies")
}

model MovieGenre {
  movieId Int
  genreId Int

  movie   Movie @relation(fields: [movieId], references: [id])
  genre   Genre @relation(fields: [genreId], references: [id])

  @@id([movieId, genreId])
  @@map("movie_genres")
}
